class Email:
    def __init__(self, destinatario, assunto, professor, titulo, area, data_incio, data_fim):
        self.destinatario = destinatario
        self.assunto = assunto
        self.professor = professor
        self.titulo = titulo
        self.area = area
        self.data_incio = data_incio
        self.data_fim = data_fim

    def __str__(self):
        return f"Email para: {self.destinatario}\nAssunto: ExtendVision: Novo projeto adicionado\nO(a) professor(a) {self.professor} adicionou um novo projeto\Titulo: {self.titulo}\nÁrea Temática: {self.area}\Data ínicio das incrições: {self.data_incio}\nData fim das inscrições: {self.data_fim}"

class EmailBuilder:
    def __init__(self, destinatario):
        self.email = Email(destinatario, "", "", "", "", "", "")

    def set_assunto(self, assunto):
        self.email.assunto = assunto
        return self

    def set_professor(self, professor):
        self.email.professor = professor
        return self

    def set_titulo(self, titulo):
      self.email.titulo = titulo
      return self

    def set_area(self, area):
      self.email.area = area
      return self

    def set_data_incio(self, data_inicio):
      self.email.data_incio = data_inicio
      return self

    def set_data_fim(self, data_fim):
      self.email.data_fim = data_fim
      return self

    def build(self):
        return self.email

# Exemplo de uso
if __name__ == "__main__":
    builder = EmailBuilder(destinatario="teste@academico.ifpb.edu.br")

    email = builder \
        .set_assunto("Projetos de Extensão") \
        .set_professor("Pai") \
        .set_titulo("Teste") \
        .set_area("Teste") \
        .set_data_incio("01/01/2021") \
        .set_data_fim("01/01/2021") \
        .build()

    print(email)
